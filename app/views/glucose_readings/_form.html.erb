<div class="container">
  <%= form_with(model: @glucose_reading) do |form| %>
    <% if @glucose_reading.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@glucose_reading.errors.count, "error") %> prohibited this glucose_reading from being saved:</h2>

        <ul>
          <% @glucose_reading.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="col-sm-12">
        <div class="col-sm-5">
          <div class="field">
            <%= form.label :blood_reading %>
            <%= form.number_field :blood_reading, class: "form-control" %>
          </div>
        </div>
      </div>

    <div class="col-sm-12">
        <div class="col-sm-5">
          <div class="field">
            <%= form.label :reading_time %>
            <div class="form-control">
              
            <%= form.datetime_select :reading_time, class:"form-control form-select" %>
            </div>
          </div>
      </div>
    </div>


    <div class="actions">
      <%= form.submit class: "btn btn-primary" %>
    </div>
  <% end %>
</div>